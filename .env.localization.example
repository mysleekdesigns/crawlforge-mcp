# Advanced Localization Configuration (Phase 2.3)
# Copy to .env and configure as needed

# ==========================================
# GLOBAL LOCALIZATION SETTINGS
# ==========================================

# Enable advanced localization features
LOCALIZATION_ENABLED=true

# Default country code (ISO 3166-1 alpha-2)
DEFAULT_COUNTRY_CODE=US

# Default language (language-country format)
DEFAULT_LANGUAGE=en-US

# ==========================================
# PROXY CONFIGURATION FOR GEO-SPECIFIC ACCESS
# ==========================================

# Enable proxy-based geo-location spoofing
LOCALIZATION_PROXY_ENABLED=true

# Proxy rotation settings
PROXY_ROTATION_ENABLED=true
PROXY_ROTATION_INTERVAL=300000
PROXY_ROTATION_STRATEGY=round-robin

# Proxy health monitoring
PROXY_HEALTH_CHECK_ENABLED=true
PROXY_HEALTH_CHECK_INTERVAL=300000
PROXY_HEALTH_CHECK_TIMEOUT=10000

# Proxy fallback configuration
PROXY_FALLBACK_ENABLED=true
PROXY_MAX_RETRIES=3
PROXY_TIMEOUT=10000

# Regional Proxy Endpoints (Example - Replace with actual proxy services)
# Format: PROXY_{REGION}_ENABLED=true/false
# Format: PROXY_{REGION}_USERNAME=username
# Format: PROXY_{REGION}_PASSWORD=password

# US East Coast
PROXY_US_EAST_ENABLED=false
PROXY_US_EAST_USERNAME=
PROXY_US_EAST_PASSWORD=

# US West Coast
PROXY_US_WEST_ENABLED=false
PROXY_US_WEST_USERNAME=
PROXY_US_WEST_PASSWORD=

# Europe West (UK, Ireland, France)
PROXY_EU_WEST_ENABLED=false
PROXY_EU_WEST_USERNAME=
PROXY_EU_WEST_PASSWORD=

# Europe Central (Germany, Netherlands, Switzerland)
PROXY_EU_CENTRAL_ENABLED=false
PROXY_EU_CENTRAL_USERNAME=
PROXY_EU_CENTRAL_PASSWORD=

# Europe North (Sweden, Norway, Denmark)
PROXY_EU_NORTH_ENABLED=false
PROXY_EU_NORTH_USERNAME=
PROXY_EU_NORTH_PASSWORD=

# Europe East (Poland, Russia, Turkey)
PROXY_EU_EAST_ENABLED=false
PROXY_EU_EAST_USERNAME=
PROXY_EU_EAST_PASSWORD=

# Asia Pacific (Japan, Korea, Singapore, Australia)
PROXY_ASIA_PACIFIC_ENABLED=false
PROXY_ASIA_PACIFIC_USERNAME=
PROXY_ASIA_PACIFIC_PASSWORD=

# Middle East (Saudi Arabia, UAE, Israel)
PROXY_MIDDLE_EAST_ENABLED=false
PROXY_MIDDLE_EAST_USERNAME=
PROXY_MIDDLE_EAST_PASSWORD=

# South America (Brazil, Argentina)
PROXY_SOUTH_AMERICA_ENABLED=false
PROXY_SOUTH_AMERICA_USERNAME=
PROXY_SOUTH_AMERICA_PASSWORD=

# North America (Canada, Mexico)
PROXY_NORTH_AMERICA_ENABLED=false
PROXY_NORTH_AMERICA_USERNAME=
PROXY_NORTH_AMERICA_PASSWORD=

# Africa (South Africa)
PROXY_AFRICA_ENABLED=false
PROXY_AFRICA_USERNAME=
PROXY_AFRICA_PASSWORD=

# ==========================================
# TRANSLATION SERVICES
# ==========================================

# Enable content translation
TRANSLATION_ENABLED=false

# Default translation provider (google, azure, libre)
TRANSLATION_PROVIDER=google

# Auto-detect source language
TRANSLATION_AUTO_DETECT=true

# Preserve HTML formatting in translations
TRANSLATION_PRESERVE_FORMAT=true

# Translation caching
TRANSLATION_CACHE_ENABLED=true
TRANSLATION_CACHE_TTL=86400000

# Google Translate API (https://cloud.google.com/translate)
GOOGLE_TRANSLATE_API_KEY=

# Azure Translator (https://azure.microsoft.com/en-us/services/cognitive-services/translator/)
AZURE_TRANSLATE_KEY=
AZURE_TRANSLATE_REGION=global

# LibreTranslate (https://libretranslate.com/)
LIBRE_TRANSLATE_URL=
LIBRE_TRANSLATE_API_KEY=

# ==========================================
# GEO-BLOCKING BYPASS
# ==========================================

# Automatically attempt to bypass geo-blocking
GEO_BLOCKING_AUTO_BYPASS=true

# Maximum bypass attempts
GEO_BLOCKING_MAX_RETRIES=3

# Delay between bypass attempts (milliseconds)
GEO_BLOCKING_RETRY_DELAY=2000

# Fallback countries to try (comma-separated)
GEO_BLOCKING_FALLBACK_COUNTRIES=US,GB,DE,CA,AU

# Detection sensitivity (low, medium, high)
GEO_BLOCKING_DETECTION_SENSITIVITY=medium

# ==========================================
# CULTURAL BROWSING SIMULATION
# ==========================================

# Enable cultural behavior adaptation
CULTURAL_SIMULATION_ENABLED=true

# Adapt browsing behavior to local patterns
CULTURAL_ADAPT_BEHAVIOR=true

# Adapt timing patterns (reading speed, click delays)
CULTURAL_ADAPT_TIMING=true

# Respect RTL (Right-to-Left) language conventions
CULTURAL_RESPECT_RTL=true

# ==========================================
# DNS CONFIGURATION
# ==========================================

# Enable localized DNS resolution
LOCALIZATION_DNS_ENABLED=false

# Use DNS over HTTPS
DNS_OVER_HTTPS=false

# Custom DNS resolvers (JSON format)
# Example: {"example.com": "192.0.2.1", "test.org": "192.0.2.2"}
CUSTOM_DNS_RESOLVERS={}

# Preferred country for DNS resolution
DNS_PREFERRED_COUNTRY=

