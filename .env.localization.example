# ==========================================
# USAGE EXAMPLES
# ==========================================

# Example 1: Enable basic localization for Germany
# LOCALIZATION_ENABLED=true
# DEFAULT_COUNTRY_CODE=DE
# DEFAULT_LANGUAGE=de-DE
# CULTURAL_SIMULATION_ENABLED=true

# Example 2: Enable full geo-blocking bypass with proxies
# LOCALIZATION_ENABLED=true
# LOCALIZATION_PROXY_ENABLED=true
# PROXY_ROTATION_ENABLED=true
# GEO_BLOCKING_AUTO_BYPASS=true
# PROXY_EU_CENTRAL_ENABLED=true
# PROXY_EU_CENTRAL_USERNAME=your_username
# PROXY_EU_CENTRAL_PASSWORD=your_password

# Example 3: Enable translation services
# LOCALIZATION_ENABLED=true
# TRANSLATION_ENABLED=true
# TRANSLATION_PROVIDER=google
# GOOGLE_TRANSLATE_API_KEY=your_google_api_key

# Example 4: Configure for RTL language support (Arabic)
# LOCALIZATION_ENABLED=true
# DEFAULT_COUNTRY_CODE=SA
# DEFAULT_LANGUAGE=ar-SA
# CULTURAL_SIMULATION_ENABLED=true
# CULTURAL_RESPECT_RTL=true

