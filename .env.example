# Search Provider Configuration
# Supported values: 'google', 'duckduckgo', 'auto'
# 'auto' uses Google if credentials are provided, otherwise DuckDuckGo
SEARCH_PROVIDER=auto

# Google Custom Search API Configuration (required for Google provider)
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id_here

# DuckDuckGo Configuration (optional, uses defaults if not specified)
DUCKDUCKGO_TIMEOUT=30000
DUCKDUCKGO_MAX_RETRIES=3
DUCKDUCKGO_RETRY_DELAY=1000
DUCKDUCKGO_USER_AGENT=MCP-WebScraper/1.0

# Performance Configuration
MAX_WORKERS=10
QUEUE_CONCURRENCY=10
CACHE_TTL=3600000
CACHE_MAX_SIZE=1000
CACHE_ENABLE_DISK=true
CACHE_DIR=./cache

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS_PER_SECOND=10
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_PER_DOMAIN=true

# Crawling Configuration
MAX_CRAWL_DEPTH=5
MAX_PAGES_PER_CRAWL=100
RESPECT_ROBOTS_TXT=true
USER_AGENT=MCP-WebScraper/1.0
CRAWL_TIMEOUT=30000
FOLLOW_EXTERNAL_LINKS=false

# Search Ranking Configuration
ENABLE_SEARCH_RANKING=true
RANKING_WEIGHT_BM25=0.4
RANKING_WEIGHT_SEMANTIC=0.3
RANKING_WEIGHT_AUTHORITY=0.2
RANKING_WEIGHT_FRESHNESS=0.1
BM25_K1=1.5
BM25_B=0.75

# Search Deduplication Configuration
ENABLE_SEARCH_DEDUPLICATION=true
DEDUP_THRESHOLD_URL=0.8
DEDUP_THRESHOLD_TITLE=0.75
DEDUP_THRESHOLD_CONTENT=0.7
DEDUP_THRESHOLD_COMBINED=0.6
DEDUP_URL_NORMALIZATION=true
DEDUP_TITLE_FUZZY=true
DEDUP_CONTENT_SIMHASH=true
DEDUP_DOMAIN_CLUSTERING=true

# Monitoring Configuration
ENABLE_METRICS=true
LOG_LEVEL=info

# Server Configuration
NODE_ENV=development
PORT=3000